<Page
    x:Class="BsuirScheduleUniversal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BsuirScheduleUniversal"
    xmlns:vm="using:BsuirScheduleUniversal.ViewModels"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <ComboBox x:Name="GroupComboBox" 
                     PlaceholderText="{x:Bind SelectedGroup, Mode=OneWay}"
                     Width="150"
                     SelectionChanged="GroupSelected" />
            <StackPanel Margin="10 0 0 0" Orientation="Horizontal"  >
                <TextBlock Text="SubGroup:" Margin="0 0 10 0" VerticalAlignment="Center"/>
                <RadioButton Content="All" Tag="0" Checked="SubgroupChecked" IsChecked="{x:Bind IsSubgroup0}"/>
                <RadioButton Content="First" Tag="1" Checked="SubgroupChecked" IsChecked="{x:Bind IsSubgroup1}"/>
                <RadioButton Content="Second" Tag="2" Checked="SubgroupChecked" IsChecked="{x:Bind IsSubgroup2}"/>
            </StackPanel>
            <CheckBox Content="Full schedule" IsChecked="{x:Bind IsFullSchedule, Mode=TwoWay}"/>
            <ProgressRing IsActive="{x:Bind IsBusy, Mode=OneWay}" Foreground="White" />
            <Button Click="ChartButton_OnClick">Chart</Button>
        </StackPanel>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                      VerticalAlignment="Stretch"
                      Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="35"></RowDefinition>
                </Grid.RowDefinitions>
                <Button HorizontalAlignment="Stretch" 
                        Grid.Row="0" 
                        Click="LoadUpClick" 
                        Visibility="{x:Bind LoadMoreVisibility, Mode=OneWay}">
                    Load more
                </Button>
                <GridView DataContext="{x:Bind Schedule, Mode=TwoWay}" ItemsSource="{Binding Mode=TwoWay}" x:Name="ScheduleGridView" Width="2000" SelectionMode="None" Grid.Row="1">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="vm:DayScheduleVM">
                            <local:DayScheduleControl DataContext="{Binding Mode=OneWay}" PairSelected="DayScheduleControl_OnPairSelected" PairDeleted="Reload" />
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
                <Button HorizontalAlignment="Stretch" 
                        Grid.Row="2" 
                        Click="LoadDownClick" 
                        Visibility="{x:Bind LoadMoreVisibility, Mode=OneWay}">
                    Load more
                </Button>
            </Grid>
        </ScrollViewer>
    </Grid>
    
</Page>
