<Page
    x:Class="BsuirScheduleUniversal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BsuirScheduleUniversal"
    xmlns:schedule="using:BsuirScheduleLib.BsuirApi.Schedule"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="GroupComboBox" 
                          PlaceholderText="{x:Bind SelectedGroup}"
                         Width="150"
                         
                         SelectionChanged="GroupSelected" />
                    <StackPanel Margin="10 0 0 0" Orientation="Horizontal">
                    <TextBlock Text="SubGroup:" Margin="0 0 10 0" VerticalAlignment="Center"/>
                    <RadioButton Content="Full" Tag="0" Checked="SubgroupChecked" IsChecked="{x:Bind IsSubgroup0}"/>
                    <RadioButton Content="First" Tag="1" Checked="SubgroupChecked" IsChecked="{x:Bind IsSubgroup1}"/>
                    <RadioButton Content="Second" Tag="2" Checked="SubgroupChecked" IsChecked="{x:Bind IsSubgroup2}"/>
                </StackPanel>
            </StackPanel>
            <GridView x:Name="ScheduleGridView" Width="2000">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="local:DaySchedule">
                        <StackPanel>
                            <TextBlock TextAlignment="Center" Text="{Binding WeekDayName}" />
                            <ListView x:Name="PairsListView" Width ="275"  Height="300" ItemsSource="{Binding Pairs}">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="schedule:Pair">
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="{x:Bind startLessonTime}" Foreground="Teal" 
                                                       FontSize="15"/>
                                                <TextBlock Text="{x:Bind endLessonTime}" Foreground="Teal" 
                                                       FontSize="15"/>
                                            </StackPanel>
                                            <StackPanel Margin="10 0 0 0" Orientation="Vertical">
                                                <TextBlock Text="{x:Bind subject}" Foreground="Teal" 
                                                       FontSize="15"/>
                                                <TextBlock Text="{x:Bind Auditory}" Foreground="Teal" 
                                                       FontSize="15"/>
                                            </StackPanel>

                                            <TextBlock Margin="10 0 0 0" Text="{x:Bind lessonType}" Foreground="Teal" 
                                                       FontSize="15"/>
                                            
                                            <TextBlock Margin="10 0 0 0" Text="{x:Bind numSubgroup}" Foreground="Teal" 
                                                       FontSize="15"/>

                                            <TextBlock Margin="10 0 0 0" Text="{x:Bind EmployeeName}" Foreground="Teal" 
                                                       FontSize="15"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </StackPanel>
    </ScrollViewer>
</Page>
