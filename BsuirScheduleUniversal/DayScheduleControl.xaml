<UserControl
    x:Class="BsuirScheduleUniversal.DayScheduleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BsuirScheduleUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:BsuirScheduleUniversal.ViewModels"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel>
        <TextBlock TextAlignment="Center" Text="{x:Bind DaySchedule.WeekDayName, Mode=OneWay}" />
        <ListView x:Name="PairsListView" 
                  Width ="275" 
                  Height="300" 
                  BorderBrush="{x:Bind DaySchedule.Border, Mode=OneWay}"
                  BorderThickness="1"
                  Background="{x:Bind DaySchedule.Background, Mode=OneWay}"
                  ItemsSource="{x:Bind DaySchedule.Pairs, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:PairVM">
                    <local:PairControl Pair="{x:Bind}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</UserControl>
